@css {
	.carousel.peppermint-active {
		position: relative;
		overflow: hidden;
		padding-left: 0;
		padding-right: 0;
	}

	.carousel.peppermint-active .peppermint-slides {
		position: relative;
		overflow: hidden; /* clearfix */
		-ms-touch-action: pan-y;
		touch-action: pan-y;
	}

	.carousel.peppermint-active .peppermint-slides > * {
		float: left;
		margin: 0;
		-moz-box-sizing: border-box;
		-webkit-box-sizing: border-box;
		box-sizing: border-box;
		-webkit-tap-highlight-color: transparent;
		tap-highlight-color: transparent;
	}

	.carousel.peppermint-active .peppermint-slides a:active,
	.carousel.peppermint-active .peppermint-slides a:active img {
		outline: none;
	}

	.carousel.peppermint-active,
	.carousel.peppermint-active .peppermint-dots,
	.carousel.peppermint-active .peppermint-slides,
	.carousel.peppermint-active .peppermint-slides > * {
		-webkit-transform: translate3d(0,0,0);
		-ms-transform: translate3d(0,0,0);
		-moz-transform: translate3d(0,0,0);
		transform: translate3d(0,0,0);
		-webkit-backface-visibility: hidden;
		-moz-backface-visibility: hidden;
		-ms-backface-visibility: hidden;
		backface-visibility: hidden;
	}

	.carousel.peppermint-mouse .peppermint-slides {
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		user-select: none;
		cursor: move;
		cursor: -webkit-grab;
		cursor: -moz-grab;
		cursor: grab;
	}

	.carousel.peppermint-mouse.peppermint-drag .peppermint-slides * {
		cursor: move;
		cursor: -webkit-grabbing;
		cursor: -moz-grabbing;
		cursor: grabbing;
	}
}
