	.main-footer {
	clear: both;


	.banner-footer {
		background-image: url("/images/banner-footer.png");
		background-repeat: no-repeat;
		background-size: 100%;
		position: relative;

		.wrap {
			left: 50%;
			position: absolute;
			top: 50%;
			text-align: center;
			transform: translate(-@left, -@top);


			.title {
				color: white;
				text-transform: uppercase;
				font-size: 24px;

				@media screen and (min-width: tablet){
					font-size: 50px;
				}

				@media screen and (min-width: desktop){
					font-size: 72px;
				}
			}

		}

		&:before {
			content: "";
			display: block;
			padding-top: 33.14%;
		}
	}

	.copyrights {
		color: #999;
		display: inline-flex;
		font-size: 10px;
		margin-left: 50%;
		padding: 10px 0px;
		text-align: center;
		transform: translate(-50%);
	}
}

