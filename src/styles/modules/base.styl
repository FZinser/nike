* {
	box-sizing: border-box;
	list-style: none;
	margin: 0;
	padding: 0;
	text-decoration: none;
}

body {
	font-family: 'Roboto', sans-serif;
}

ul {
	padding-left: 0;
}

button {
	background: none;
	border: 0 none;
	outline: none;
}

.clearfix {
	&:after {
		clear: both;
		content: "";
		display: block;
	}
}
