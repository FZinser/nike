.single-category{
	margin: 80px auto;

	.products-title{
		margin-bottom: 40px;
	}

	.peppermint-dots {
		align-items: center;
		display: flex;
		justify-content: center;
		padding: 20px 0;

		li {
			background-color: lighten(gray-theme, 40%);
			border-radius: 100%;
			height: 12px;
			margin: 0 10px;
			outline: none;
			width: @height;

			&.peppermint-active-dot {
				background-color: dark-gray-theme;
				transform-origin: center;
				transform: scale(1.25);
			}
		}
	}
}

.products {
	clear: both;

	.customizer {
		background-image: url("../images/personalize.jpg");
		background-position: 0 2px;
		background-repeat: no-repeat;
		border-bottom: solid 1px;
		color: gray-theme;
		font-size: 12px;
		font-weight: bold;
		margin-bottom: 10px;
		padding-bottom: 4px;
		padding-left: 20px;
		padding-top: 4px;
		text-transform: uppercase;
	}

	.description {
		font-size: 14px;
		font-weight: bold;
		line-height: 1.3;
		margin-bottom: 10px;
	}

	.category {
		color: #999;
		font-size: 14px;
		font-weight: lighter;
		margin-bottom: 10px;
	}

	.price{
		color: gray-theme;
		font-size: 16px;
		font-weight: bold;
		margin-bottom: 10px;
	}

	.price-info{
		color: #999;
		font-size: 14px;
		margin-bottom: 10px;
	}

	.single-product {
		border-color: transparent;
		border-style: solid;
		border-width: 1px;
		float: left;
		line-height: 1;
		padding: 0 40px 40px;
		transition: .2s transform, .2s border;
		width: 100%;

		@media screen and (min-width: (desktop+1)) {
			&:hover {
				border-color: #ccc;

				.ui-btn {
					opacity: 1;
					visibility: visible;
				}

				// transform: scale(1.1);
			}
		}

		&:nth-of-type(n+1) {
			margin-bottom: 20px;
		}

		.banner {
			text-align: center;
		}

		.ui-btn {
			background-color: orange-theme;
			color: white;
			font-size: 12px;
			margin-top: 10px;
			width: 100%;

			&:hover{
				background-color: darken(orange-theme, 20%);
			}

			@media screen and (min-width: (desktop+1)) {
				opacity: 0;
				visibility: hidden;
			}
		}

		@media screen and (min-width: tablet) {
			margin-left: 20px;
		}

		@media screen and (min-width: tablet) and (max-width: desktop) {
			width: calc(50% - 15px);

			&:nth-of-type(2n+1) {
				margin-left: 0;
			}

			&:nth-of-type(n+3) {
				margin-top: 20px;
			}
		}

		@media screen and (min-width: (desktop+1)) {
			width: calc(25% - 15px);

			&:nth-of-type(4n+1) {
				margin-left: 0;
			}

			&:nth-of-type(n+5) {
				margin-top: 20px;
			}
		}
	}
}
